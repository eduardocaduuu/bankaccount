# ===========================================
# CONTROLE PONTO SÓLIDES - CONFIGURAÇÃO
# ===========================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/controle_ponto?schema=public"

# API
API_PORT=3001
API_HOST=0.0.0.0
API_INTERNAL_TOKEN=seu-token-interno-seguro-minimo-10-caracteres
NODE_ENV=development

# ===========================================
# Tangerino/Sólides Integration (READ-ONLY)
# ===========================================
# IMPORTANTE: Esta integração é SOMENTE LEITURA
# - Apenas consulta dados (GET)
# - NÃO altera ponto dos colaboradores
# - NÃO envia dados para a Sólides/Tangerino
# - Ponto oficial continua sendo o do Tangerino
# ===========================================

# URL para buscar funcionários
SOLIDES_BASE_URL=https://employer.tangerino.com.br

# URL para buscar resumo diário de ponto (daily-summary)
SOLIDES_PUNCHES_BASE_URL=https://apis.tangerino.com.br/punch

# Token de autenticação do Tangerino
SOLIDES_API_KEY=seu-token-tangerino

# Header para enviar o token (padrão: Authorization)
SOLIDES_API_KEY_HEADER_NAME=Authorization

# Path para buscar funcionários
SOLIDES_EMPLOYEES_PATH=/employee/find-all

# Path para buscar resumo diário (/daily-summary/)
SOLIDES_PUNCHES_PATH=/daily-summary/

# Slack Bot
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token
API_BASE_URL=http://localhost:3001

# Slack Optional
HR_SLACK_USER_ID=U123456789
HR_CHANNEL_ID=C123456789

# Web Dashboard
NEXT_PUBLIC_API_URL=http://localhost:3001

# Timezone
TZ=America/Maceio
